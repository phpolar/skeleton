  <coverage pathCoverage="true" />
  <php>
    <const name="Phpolar\Phpolar\Tests\ENTITY_NAME_TEST_CASE" value="FAKE NAME" />
  </php>
  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </source>
