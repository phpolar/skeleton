{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/skeleton",
    "description": "A minimal starting point for a PHPolar application.",
    "type": "project",
    "license": "MIT",
    "require": {
        "phpolar/csv-file-storage": "^0.6",
        "laminas/laminas-diactoros": "^2.24",
        "pimple/pimple": "^3.5",
        "picocss/pico": "^1.5",
        "phpolar/phpolar": "2.0.0b0",
        "phpolar/validators": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Phpolar\\App\\": "src/",
            "Phpolar\\Example\\": "example/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": [
            "composer exec \"phpunit\""
        ],
        "start": [
            "composer exec \"launch\""
        ],
        "link-css-framework": [
            "ln -s -f ../../../vendor/picocss/pico/css/pico.classless.min.css public/resources/css/",
            "ln -s -f ../../../vendor/picocss/pico/css/pico.classless.min.css.map public/resources/css/"
        ],
        "post-root-package-install": [
            "mkdir data",
            "mkdir -p src/templates",
            "mkdir tests"
        ],
        "post-create-project-cmd": [
            "@start"
        ],
        "post-install-cmd": [
            "@link-css-framework"
        ],
        "post-update-cmd": [
            "@link-css-framework"
        ]
    }
}
