{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/skeleton",
    "description": "A minimal starting point for a PHPolar application.",
    "type": "project",
    "license": "MIT",
    "require": {
        "phpolar/csv-file-storage": "^0.4",
        "phpolar/phpolar": "dev-58-redesign-project",
        "laminas/laminas-diactoros": "^2.24",
        "pimple/pimple": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Phpolar\\App\\": "src/",
            "Phpolar\\Example\\": "example/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": [
            "composer exec \"phpunit\""
        ],
        "start": [
            "composer exec \"launch\""
        ],
        "post-create-project-cmd": [
            "mkdir data && mkdir src/templates && mkdir tests",
            "@start"
        ]
    }
}