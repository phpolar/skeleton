{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/skeleton",
    "description": "A minimal starting point for a PHPolar application.",
    "type": "project",
    "license": "MIT",
    "require": {
        "phpolar/csv-file-storage": "^0.6",
        "pimple/pimple": "^3.5",
        "picocss/pico": "v2.0.0-alpha1",
        "phpolar/validators": "^1.1",
        "nyholm/psr7": "^1.7",
        "nyholm/psr7-server": "dev-master",
        "phpolar/phpolar": "^4.0",
        "phpolar/pure-php": "^2.0",
        "phpolar/csrf-protection": "^3.0",
        "phpolar/csrf-response-filter": "^1.0",
        "phpolar/model": "^1.1",
        "phpolar/model-resolver": "^1.0",
        "phpolar/property-injector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Phpolar\\App\\": "src/",
            "Phpolar\\Example\\": "example/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:phpolar/psr7-server",
            "canonical": false,
            "only": ["nyholm/psr7-server"]
        }
    ],
    "scripts": {
        "test": [
            "composer exec \"phpunit\""
        ],
        "link-css-framework": [
            "ln -s -f ../../../vendor/picocss/pico/css/pico.classless.min.css public/resources/css/"
        ],
        "post-root-package-install": [
            "mkdir data",
            "mkdir -p src/templates",
            "mkdir tests"
        ],
        "post-install-cmd": [
            "@link-css-framework"
        ],
        "post-update-cmd": [
            "@link-css-framework"
        ]
    }
}
